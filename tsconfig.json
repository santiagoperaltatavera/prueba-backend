{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "test", "jest.config.ts"]
}
